{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold mt-6">{{ breeds ? breeds : ' All Breeds' }}</h1>

        <h2 class="mt-10 mb-6 text-2xl font-semibold">Filter by atribute</h2>
        <ul class="flex space-x-4 mt-4 mb-6">
            <li>
                <a class="btn btn-primary bg-blue-500 text-white px-3 py-1 rounded" href={{ path('breed_dog',
                    {
                        slug:"small-size"
                    }) }}>small-size</a>
            </li>
            <li>
                <a class="btn btn-primary bg-blue-500 text-white px-3 py-1 rounded" href={{ path('breed_dog',
                    {
                        slug: 'long-hear'
                    }) }}>long-hear</a>
            </li>
            <li>
                <a class="btn btn-primary bg-blue-500 text-white px-3 py-1 rounded" href={{ path('breed_dog', {
                    slug: 'low-exercise'
                }) }}>low-exercise</a>
            </li>
        </ul>

        <div>
            <h2 class="mt-10 text-2xl font-semibold">Mixes</h2>
            <div class="flex flex-wrap -mx-4">
                <div class="w-full md:w-1/3 px-4 mb-8">
                    <div class="p-6 bg-white text-center rounded shadow">
                        <img class="mx-auto mb-4" src="https://via.placeholder.com/300" data-src="https://via.placeholder.com/300" alt="Square placeholder img">
                        <p class="mt-2 text-xl font-bold">PB & Jams</p>
                        <span>14 Tracks</span> | <span>Rock</span>
                    </div>
                </div>
                <div class="w-full md:w-1/3 px-4 mb-8">
                    <div class="p-6 bg-white text-center rounded shadow">
                        <img class="mx-auto mb-4" src="https://via.placeholder.com/300" data-src="https://via.placeholder.com/300" alt="Square placeholder img">
                        <p class="mt-2 text-xl font-bold">Put a Hex on your Ex</p>
                        <span>8 Tracks</span> | <span>Heavy Metal</span>
                    </div>
                </div>
                <div class="w-full md:w-1/3 px-4 mb-8">
                    <div class="p-6 bg-white text-center rounded shadow">
                        <img class="mx-auto mb-4" src="https://via.placeholder.com/300" data-src="https://via.placeholder.com/300" alt="Square placeholder img">
                        <p class="mt-2 text-xl font-bold">Spice Grills - Summer Tunes</p>
                        <span>10 Tracks</span> | <span>Pop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
